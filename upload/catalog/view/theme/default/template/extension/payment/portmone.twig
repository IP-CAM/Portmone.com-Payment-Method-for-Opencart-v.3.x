{% if payment_note %}
<div class="content">
    <p>{{ payment_note }}</p>
</div>
{% endif %}
<form action="{{ action }}" method="post">
  <input type="hidden" name="payee_id" value="{{ payee_id }}" />
  <input type="hidden" name="shop_order_number" value="{{ order_id }}" />
  <input type="hidden" name="bill_amount" value="{{ amount }}"/>
  <input type="hidden" name="description" value="{{ description }}"/>
  <input type="hidden" name="success_url" value="{{ url_confirm }}" />
  <input type="hidden" name="failure_url" value="{{ url_confirm }}" />
  <input type="hidden" name="lang" value="{{ language }}" />
  <input type="hidden" name="preauth_flag" value="{{ preauthorize }}" />
  <div class="buttons">
    <div class="pull-right">
      <input type="submit" value="{{ button_confirm }}" class="btn btn-primary button" />
    </div>
  </div>
</form>
